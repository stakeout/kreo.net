.pricing
  background-color: #F5F6F7;
  &__inner
    display flex
    flex-wrap wrap
    padding-top 60px
    padding-bottom 60px
  &__title
    width 100%
    margin-bottom 55px
    padding-left 25px
    font-size 32px
    line-height 40px
    color #1D2029
    font-weight 400
    text-transform: uppercase;
  &__wrap
    padding-top: 60px;
    padding-bottom: 85px;
    background-color: #DBDFE4;
  &__card
    display flex
    flex-direction: column;
    align-items: center;
    height: 475px;
    padding: 55px 75px;
    background-color: #fff;
  &__card:first-child
    margin-right: 45px;
    margin-left: 180px;
  &__card-title
    font-size: 22px;
    line-height: 1;
    text-align: center;
    margin-bottom: 37px;
    color: #253147;
    text-transform: uppercase;
  &__list
    margin-bottom: 35px;
  &__item
    width: 310px;
    padding: 20px 0;
    color: #404F6B;
    font-size: 16px;
    line-height: 1;
    border-bottom: 1px solid #E8E9EB;
  &__cost
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: auto;
    p
      font-weight: 500;
      color: #77CE64;
    span
      font-size: 10px;
      color: #000;
    height: 35px;
  &__btn
    padding: 15px 40px;
    font-size: 14px;
    font-weight: 500;
    line-height: 18px;
    border-radius: 23px;
    color: #fff;
    background: orange;
