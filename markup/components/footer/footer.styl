.page-footer
  background url("https://www.kreo.net/hubfs/kreo_new/static/img/svg/patern50-50.svg") repeat, #294861
  background-size 50px 50px
  &__inner
    display -webkit-flex
    display -moz-flex
    display -ms-flex
    display -o-flex
    display flex
    padding-top 30px
    padding-bottom 30px
  &__privacy
    width 200px
    a
      display block
      padding 5px 0
      font-size 13px
      letter-spacing 0.2px
      color #fff
      text-transform uppercase
      transition color .4s
      &:hover
        color #f58240
  &__nav-item
    a
      display block
      padding 5px 0
      font-size 13px
      letter-spacing 0.2px
      color #fff
      text-transform uppercase
      transition color .4s
      &:hover
        color #f58240
  &__bottom-row
    padding 10px 0
    background-color rgba(0,0,0,.5)
    .container
      display flex
.subscription
  color #fff
  margin-right auto
  h2
    font-weight 400
    margin-bottom 10px
  p
    margin-bottom 20px
  input[type=text]
    width 300px
    height 45px
    margin-right 20px
    padding 0 20px
    color #000
    font-size 16px
    border-radius 60px
    border 1px solid #fff
  input:not([type=text])
    width 220px
    height 45px
    background-color #f58240
    border-radius 60px
    color #fff
    font-weight 500
    border none
    transition: background-color .4s
    &:hover
      background-color #FA8846
.copyright
  flex-grow 1
  font-size 16px
  font-weight 300
  letter-spacing 0.2px
  color #fff
.socials
  display flex
  align-items center
  &__item:not(:last-child)
    margin-right 20px
  &__link
    display block
    color #fff
    width 20px
    height 20px
    font-size 0
    &--linkedin
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/linked-social.svg')
      background-repeat no-repeat
      background-size 20px 20px
    &--fb
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/facebook-social.svg')
      background-repeat no-repeat
      background-size 20px 20px
    &--youtube
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/youtube-social.svg')
      background-repeat no-repeat
      background-size 20px 20px
    &--twitter
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/twitter-social.svg')
      background-repeat no-repeat
      background-size 20px 20px
    &--pinterest
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/pinterest-social.svg')
      background-repeat no-repeat
      background-size 20px 20px
