.sign-form
  max-width 600px
  display none
  background: #fff
  &__inner
    padding: 45px 70px 60px 70px;
  &__title
    margin-bottom: 20px;
    text-align: center;
    font-size: 32px;
    line-height: 1;
    font-weight: 400;
    color: #21242E;
  &__text
    margin-bottom: 30px;
    font-size: 14px;
    line-height: 18px;
    color: #748091;
    text-align: center;
  &__form
    display: flex;
    flex-wrap: wrap;
  &__item
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-bottom: 10px;
    &:nth-child(1)
      width: 45%;
      margin-right: auto;
    &:nth-child(2)
      width: 45%;
    label
      font-size: 13px;
      line-height: 1;
      color: #8390A3;
    input
      padding: 5px;
      padding-bottom: 10px;
      font-size: 16px;
      line-height: 21px;
      color: #21242E;
      outline: 0;
      border: 0;
      border-bottom: 1px solid #E8E9EB;
  &__btn
    margin: 0 auto;
    margin-top: 30px;
    padding: 15px 58px;
    font-size: 14px;
    font-weight: 500;
    line-height: 18px;
    outline: 0;
    border: 0;
    border-radius: 23px;
    color: #fff;
    background: #F58240;
  &__close
    position: absolute;
    right: 0;
    top: 0;
    font-size: 40px;
    line-height: 30px;
    font-weight: 300;
    transform: rotate(45deg);
    outline: 0;
    border: 0;
    background-color: transparent;
.overlay
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  content: "";
  background: #18263D;
  opacity: 0.4;
