.page-header
  position fixed
  width 100%
.navigation
  display flex
  align-items center
  padding 20px 5%
  &__list
    display flex
    margin-right auto
    margin-left 50px
  &__item:not(:last-child)
    margin-right 40px
  &__link
    position: relative;
    display block
    font-family inherit
    font-size 12px
    line-height 40px
    color $nav-text
    font-weight 500
    text-transform uppercase
    transition border-bottom .3s, color .3s ease
    &:hover,
    &:focus
      color $white
    &:hover::before,
    &:focus::before
      position: absolute;
      content ''
      width: 100%;
      height: 4px;
      bottom: 4px;
      left: 0;
      background-color $orange
      animation link-underline 0.3s linear

.logo
  a
    display block
  img
    display block
.try-demo
  height 30px
  padding 0 31px
  font-size 12px
  line-height 30px
  font-weight 500
  color $white
  text-transform uppercase
  letter-spacing 1px
  background-color $dark-blue
  border-radius 15px
  transition background-color .3s
  &:hover,
  &focus
    background-color $light-blue

@keyframes link-underline
  0%
    transform scale(0)
  100%
    transform scale(1)

