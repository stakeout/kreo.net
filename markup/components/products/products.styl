.products
  background-color: #DDE2EB
  &__no-active
    visibility hidden
  &__inner
    padding-top 80px
    padding-bottom 130px
  &__title
    margin-bottom 80px
    padding-left 20px
    font-size 32px
    line-height 40px
    color #37474f
    font-weight 400
    text-transform uppercase
  &__list
    display flex
    justify-content space-between
  &__item
    display flex
    flex-direction column
    align-items center
    justify-content stretch
    min-height 430px
    flex-basis 360px
    padding 50px 40px 40px
    background-color #fff
    box-shadow: 0 10px 30px 0 rgba(51,56,71,0.08)
    text-align center
    transition: all 0.8s cubic-bezier(0.445, 0.05, 0.55, 0.95);
    &:hover
      transform: translateY(-10px) ;
      box-shadow: 0 10px 30px 0 rgba(0,0,0,0.16)
    p
      margin-bottom 25px
      font-size 16px
      line-height 22px
      color #8898B3
    a:not(.products__btn)
      position relative
      display block
      padding-right 20px
      color #5C8AE6
      font-size 12px
      line-height 22px
      font-weight 500
      text-transform uppercase
      &:hover
        text-decoration underline
      &::after
        position absolute
        content '>'
        right 0
        top -3px
        font-size 20px
        color #5c8ae6
  &__item-title
    margin-bottom 40px
    font-size 24px
    line-height 30px
    font-weight 400
    color #37474f
  &__icon-wrapper
    width 100px
    height 100px
    margin-bottom 40px
    &--design
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/icon_design.svg')
      background-repeat no-repeat
    &--view
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/icon_view.svg')
      background-repeat no-repeat
    &--plan
      background-image url('https://www.kreo.net/hubfs/kreo_new/static/img/svg/icon_plan.svg')
      background-repeat no-repeat
  &__btn
    margin-top auto
    width 170px
    margin-bottom 20px
    padding 13px 0
    font-size 14px
    line-height 18px
    font-weight 500
    color #fff
    background-color: #5C8AE6
    border-radius 25px
    cursor: pointer
    background-color #ffa726
    transition background-color .1s linear
    &:hover
      background-color: #ffb74d
