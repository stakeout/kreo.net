.promo
  &__header
    position relative
    background-color #638BD3
    min-height 470px
    padding-top 95px
    overflow: hidden
    &--plan
      background-color #576B88
    &::after
      position absolute
      content ''
      width 0
      height 0
      bottom 0
      left 0
      border-style: solid
      border-width: 0 978px 70px 700px
      border-color: transparent transparent #fff transparent
    &::before
      position absolute
      content ''
      width: 0;
      height: 0;
      left 0
      bottom 0
      border-style: solid
      border-width: 65px 0 71px 700px
      border-color: transparent transparent transparent #4771bc
    &--view
      &::after
        border-color: transparent transparent #f5f6f7 transparent
    &--plan
      &::before
        border-color: transparent transparent transparent #3F506A

    h1
      margin-bottom 35px
      font-size 56px
      line-height 72px
      color #fff
      font-weight 400
    p:not(.controls__title)
      max-width 550px
      font-size 22px
      line-height 26px
      color #fff
    &--view,
    &--plan
      padding-top 30px
      h1
        margin-bottom 30px
        font-size 28px
        line-height 40px
        font-weight 400
      p:not(.controls__title)
        font-size 16px
        line-height 22px
  &__content
    padding-top 55px
    padding-bottom 55px
    h2
      margin-bottom 20px
      font-size 32px
      line-height 1
      color #1d2029
    p
      font-size 16px
      line-height 22px
      color #21242e
      &:not(:last-of-type)
        margin-bottom 20px
.controls
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  align-items center
  margin-bottom 50px
  &__title
    margin-right 135px
    color #fff
    font-size 22px
    line-height 28px
    font-weight 500
    text-transform uppercase
    span
      font-weight 400
  &__nav-link
    position relative
    color #fff
    font-size 16px
    line-height 21px
    font-weight 400
    text-transform uppercase
    &:not(:last-child)
      margin-right 50px
    &:hover,
    &:focus,
    &--active
      &::before
        position absolute
        content ''
        left 0
        bottom -10px
        width 100%
        height 1px
        background-color #fff
.revit-plugin
  width 135px
  margin-left auto
  margin-right 30px
  padding-top 12px
  padding-bottom 14px
  font-size 14px
  line-height 18px
  color #fff
  font-weight 500
  border 1px solid #fff
  border-radius 23px
  text-align center
.sign-up
  width 160px
  padding-top 13px
  padding-bottom 15px
  font-size 14px
  line-height 18px
  color #fff
  font-weight 500
  background-color #F58240
  border-radius 23px
  text-align center
  box-shadow: 0 10px 20px 0 rgba(0,32,77,0.18);
  &:hover
    background-color #FA8846;
  &--kreo-plan
    margin-left auto
