.promo
  height 100vh
  background-color #222e3c
  background-image url(__static__minified-svg/patern50-50.svg)
  background-repeat repeat
  background-size 50px 50px
  &__inner
    display flex
    max-width 1920px
    height inherit
    margin: 0 auto;
  &__content-wrap
    position: relative;
    width: 35%;
    margin: auto;
    svg
      width 100%
  &__content
    position absolute
    top: 50%;
    left: 50%;
    display flex
    flex-direction column
    align-items center
    width 100%
    height 100%
    margin auto
    border-radius 50%
    text-align center
    background-color #c5c5c5
    transform scale(0)
    animation scale 1s ease-in 1s
    animation-fill-mode: forwards;
  &__content-header
    width: 100%;
    margin-top: 40%;
    img
      width: 40%;
      margin-bottom 5%
    p
      font-size 18px
      line-height 27px
      font-weight 300
      color $nav-text
      text-transform uppercase
  &__sign-up
    position relative
    display flex
    width 20%
    height 20%
    box-sizing border-box
    justify-content center
    margin-top auto
    margin-bottom: 7%;
    padding-top: 10%;
    color $white
    font-size 12px
    line-height 18px
    font-weight 500
    text-align center
    text-transform uppercase
    background-color $orange
    border-radius 50%
    transition color .3s, background-color .3s ease
    &::before
      position absolute
      content ''
      top calc(50% - 30px)
      width 20px
      height 20px
      background-color $white
      border-radius 50%
    &:hover,
    &:focus
      background-color $white
      color $light-blue
      &::before
        background-color $orange
  &__mouse
    display block
    content ''
    position absolute
    width 30px
    height 50px
    bottom -70px
    left 50%
    border-radius: 15px 15px 13px 13px;
    border: 2px solid #fff;
    transform translateX(-50%) scaleY(0)
    animation mouse-scale 1s ease-out 3.8s
    animation-fill-mode: forwards;
    &:before
      position absolute
      content ''
      left 50%
      top 8px
      margin-left -2px
      width 4px
      height 9px
      background #fff
      border-radius 2px
      animation mouse-wheel 1.25s infinite linear
      transform-origin 50% 0

@keyframes scale
  0%
    transform scale(0) translate(0%, 0%)
    opacity 0
  100%
    transform scale(1) translate(-50%, -50%)
    opacity 1

@keyframes mouse-scale
  0%
    transform translateX(-50%) scaleY(0)
  100%
    transform translateX(-50%) scaleY(1)


@keyframes mouse-wheel
    0%,
    to
        transform: scaleY(.4) translateY(0)
    20%
        transform: scaleY(1) translateY(0)
    60%
        transform: scaleY(.4) translateY(12px)
