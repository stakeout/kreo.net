.faqs
  background-color: skyblue
  &__inner
    display flex
    flex-wrap wrap
    padding-top 60px
    padding-bottom 120px
  &__title
    width 100%
    margin-bottom 55px
    padding-left 25px
    font-size 32px
    line-height 40px
    color #1D2029
    font-weight 400
  &__wrap
    width: 100%;
    padding: 0 200px;
    padding-top: 60px;
    padding-bottom: 85px;
    background-color: #fff;
  &__subtitle
    margin-top: 0;
    margin-bottom: 65px;
    font-size: 36px;
    line-height: 1;
    text-align: center;
  &__item
    border-bottom: 1px solid #E8E9EB;
    a
      position: relative;
      display: block;
      padding: 19px 0;
      font-size: 16px;
      line-height: 22px;
      color: #253147;
      cursor: pointer;
      &::after
        position: absolute;
        content: '';
        border: 4px solid transparent
        top: 50%;
        right: 6px;
        border-top: 5px solid #A7B0BD;
    a.active
      &::after
        animation: faqs 0.3s ease;
        animation-fill-mode: forwards;
    p
      display: none;
      margin-top: -10px;
      padding-bottom: 22px;
      font-size: 14px;
      line-height: 20px;
      color: #61728F;

@keyframes faqs {
0% {transform: rotate(0deg) translateY(0px);}
100% {transform: rotate(180deg) translateY(4px);}
}
