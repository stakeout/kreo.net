.features
  background-color #F5F6F7
  &__inner
    padding-top 60px
    padding-bottom 60px
  &__title
    margin-bottom 55px
    padding-left 25px
    font-size 32px
    line-height 40px
    color #37474f
    font-weight 400
    text-transform uppercase
  &__list
    row-flex()
  &__item
    col()
    size(4)
    display flex
    flex-direction column
    padding 40px
    background-color: #fff
    box-shadow 0 10px 30px 0 rgba(51,56,71,0.08)
    &:not(:nth-child(-n+3))
      margin-top 30px
  &__item-title
    margin-bottom 20px
    color #343948
    font-size 22px
    line-height 30px
    font-weight 400
  &__video-wrap
    margin-top auto
    width auto
    height auto
    background-color rgba(0,0,0,.1)
    img
      width 290px
  &__hint
    position relative
    margin-top 20px
    &:hover
      & > .hint-wrapper
        display block
    span
      display inline-block
      vertical-align top
      color #5C8AE6
      font-size 12px
      line-height 22px
      font-weight 500
      text-transform uppercase
      i
        display inline-block
        vertical-align top
        font-size 16px
        font-style normal
.hint-wrapper
  position absolute
  left -40px
  width 500px
  display none
  padding 15px
  background-color #fff
  box-shadow 0 10px 30px 0 rgba(51,56,71,0.08)
  z-index 2
  p
    margin-bottom 20px
    color #000
    font-weight 500
    font-size 16px
    line-height 20px
  ul
    width 300px
    li
      position relative
      padding-left 20px
      color #455a64
      font-size 16px
      line-height 2
      font-weight 400
      &::before
        position absolute
        content ''
        left 0
        top calc(50% - 3px)
        width 6px
        height 6px
        background-color: #F58240
        border-radius 50%
.youtube-video
  position relative
  display block
  height 100%
  font-size 0
  &::after
    position absolute
    content ''
    width 68px
    height 50px
    left 50%
    top 50%
    transform translate(-50%, -50%)
    border-radius 10px
    background-color rgba(255,255,255,.7)
    background-image url('data:image/svg+xml;base64,')
    background-repeat no-repeat
    background-size 75px 75px
    background-position center
  &:hover::after
    background-color rgba(255,255,255,1)
  img
    position relative
